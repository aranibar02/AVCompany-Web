@model List<AVcompanyWeb.Models.Product>

<style>
    .col-center-block {
        float: none;
        display: block;
        margin: 0 auto;
        /* margin-left: auto; margin-right: auto; */
    }
    .list-group-item {
        border:none;
    }

</style>


</br>
<div class="row el-element-overlay">

    @foreach (var item in Model)
    {

        string imageProduct = "";
        string priceProduct = "";

        if (item.Uploads.Count() == 0)
        {
            imageProduct = "../Images/imagenotavailable";
        }
        else
        {
            imageProduct = item.Uploads.ElementAt(0).srcImage;
        }

        if (item.PriceProducts.Count() == 0)
        {
            priceProduct = "No especificado.";
        }
        else
        {
            double price = (double)item.PriceProducts.ElementAt(0).priceWithIGV;
            priceProduct = String.Concat("S/ ",price.ToString("0.00"));            
        }



        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="el-card-item" style="padding-bottom:0px;">
                    <div class="el-card-avatar el-overlay-1" style="margin-bottom:0px;">
                        <img src="@item.Uploads.ElementAt(0).srcImage" alt="user" style="height:200px;object-fit: cover" />
                        <div class="el-overlay">
                            <ul class="el-info">
                                <li><a class="btn default btn-outline image-popup-vertical-fit" href="@imageProduct"><i class="icon-magnifier"></i></a></li>
                                <li><a class="btn default btn-outline" href="@Url.Action("Details","Product",new {id = item.id })"><i class="icon-pencil"></i></a></li>
                                <li><a class="btn default btn-outline delete-product" product-id="@item.id"><i class="icon-trash"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item" style="height:50px;"><span class=" icon-puzzle"></span><div class="card-title" style="display:inline;margin-left:10px;">@item.name</div></li>
                        <li class="list-group-item" style="height:80px;"><span class=" icon-tag"></span><p class="card-text" style="display:inline;margin-left:10px;">@item.description</p></li>
                        <li class="list-group-item"><span class="icon-wallet"></span><p class="card-text" style="display:inline;margin-left:10px;">@priceProduct</p></li>
                    </ul>
                </div>
            </div>
        </div>
    }   

</div>
